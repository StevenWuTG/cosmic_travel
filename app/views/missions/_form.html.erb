

<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
    <p><%= error %></p>
    <% end  %>
<% end %>

<%= form_for @mission do |f| %>
<%= f.label :name %><br>
<%= f.text_field :name %><br>

<%= f.label :scientist %><br>
<%= f.collection_select :scientist_id, Scientist.all, :id, :name %><br>

<%= f.label :planet %><br>
<%= f.collection_select :planet_id, Planet.all, :id, :name %><br>

<%= f.submit %><br>
<% end %>